# Template .env per ambiente Replit
# Rinomina questo file in .env o .env.local all'interno di Replit

# Configurazione Next.js
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://tuo-replit-app.replit.app

# API Keys locali per Replit (usate quando il servizio centralizzato è disabilitato)
TMDB_API_KEY=TUA_CHIAVE_TMDB_QUI
NEXT_PUBLIC_TMDB_API_KEY=TUA_CHIAVE_TMDB_QUI

# Configurazioni di sicurezza
SKIP_API_KEY_SERVICE=true  # Disabilita esplicitamente il servizio API key centralizzato

# Configurazione Supabase (utilizza le stesse credenziali del progetto principale)
NEXT_PUBLIC_SUPABASE_URL=https://tuo-id-progetto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=tua-chiave-anonima-supabase

# Feature flags specifici per Replit
DISABLE_RISKY_FEATURES=true  # Disabilita funzionalità che potrebbero causare problemi in Replit

# Logging
DEBUG_LEVEL=info  # Imposta il livello di logging (debug, info, warn, error)